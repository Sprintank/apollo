<% selected_font = @band.field_values.find_by(:field_option => field_option).try(:value) %>
<% font_list = load_font_options %>

<select name="band[field_option_values][<%= field_option.identifier %>]"  class="no_top_border">
  <% font_list.each do |font_id, detail| %>
    <option value='<%= font_id %>' <% if selected_font == font_id.to_s %> selected <% end %>><%= detail[:display_name] %></option>
  <% end %>
</select>