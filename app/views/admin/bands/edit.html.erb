<div id="app">

    <div id="sidebar">
      <form>
        <ul id="menu_sections">

          <li id="menu-logo" class="active">
            <button class="menu_section_label">Logo</button>

            <div class="menu_section">
              <label>Text &amp; Font</label>
              <input type="text" id="menu_item_01" value="Name" />
              <select>
                <option>Montserrat</option>
                <option>Lato</option>
                <option>Droid Sans</option>
                <option>Need Moar!</option>
              </select>
              <label>Custom Logo</label>
              <input type="file" name="pic" accept="image/*">
              <button>Delete Logo</button>
            </div>

          </li>

          <li id="menu-social"><button class="menu_section_label">Social</button></li>

          <li id="menu-music"><button class="menu_section_label">Music</button></li>

          <li id="menu-style">
            <button class="menu_section_label">Style</button>

            <div class="menu_section">
              <label>Background Image</label>
              <input type="file" name="pic" accept="image/*">
              <button>Delete Logo</button>
              <label>Color &amp; Transparency</label>

            </div>

          </li>
        </ul>
      </form>
    </div>

    <div id="topbar">
      <a id="preview_url" href="#" target="_blank">apollomusic.com/username</a>
      <ul id="save_dialog">
        <li><button class="cancel">Cancel</button></li>
        <li><button class="save">Save</button></li>
      </ul>
    </div>

    <div id="website_frame">
      <p>you are editing the band:  '<%= @band.name %>'</p>
    </div>

  </div>