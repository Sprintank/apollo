<% current_background_id = @band.field_values.find_by(:field_option => field_option).try(:value) || '1' %>

<label class="subsection_label"><%= field_option.name %></label>
<div class="background_picker">

  <ul>
    <% (1..16).each do |img_num| %>

      <label id="image-<%= img_num %>" class="<%= img_num == current_background_id.to_i ? 'current' : '' %>">
        <input type="radio" name="background-image">
        <img src="<%= image_url("background_images/thumbs/#{"%.2d" % img_num}.jpg") %>" alt="" />
      </label>

    <% end %>
  </ul>
  
  <input type="hidden" name="band[field_option_values][<%= field_option.identifier %>]" value="<%= current_background_id %>" />
</div>
<p class="credits">All photos courtesy of <a href="https://unsplash.com" target="_blank">Unsplash</a>.</p>