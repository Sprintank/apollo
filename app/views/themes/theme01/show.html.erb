<div id="site_wrap">
	<div id="overlay_color"></div>
	<div id="mobile_header">
		<div id="mobile_menu_toggle">
			<i class="icon-menu"></i>
		</div>
		<span id="mobile_site_title"><%= @band.name %></span>
	</div>
	<header id="main_header" class="site_header">
		<div class="wrap">
			<div id="logo_wrap">
				<a href="<%= band_url(@band.identifier) %>" id="logo"><%= @band.name %></a>
			</div>
			<nav id="header_nav" class="clearfix">
				<ul id="social_links">
					<% @social_field_options.each do |social_field| %>
						<% if social_field_value = @band.get_field_value_for_option(social_field) %>
							<li class="<%= social_field.name.downcase %>"><a href="<%= social_field_value%>" target="_blank"><i class="icon-<%= social_field.name.downcase %>"></i></a></li>
						<% end %>
					<% end %>
				</ul>
			</nav>
		</div>
	</header>
	<div id="page_sections">
		<div class="page_section music_section first">
			<div class="wrap">
				<div class="album clearfix">
					<div class="soundcloud_embed">
						<% if soundcloud_track_id = @band.get_field_value_for_option(@soundcloud_track_field_option) %>
							<iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= soundcloud_track_id %>&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
						<% end %>
					</div>
					<div class="album_info_wrapper">
						<div class="album_info">
							<span class="album_type"><%= @band.get_field_value_for_option(@music_type_option) %></span>
							<h3 class="album_title"><%= @band.get_field_value_for_option(@music_title_option) %></h3>
							<div class="album_description">
								<p><%= @band.get_field_value_for_option(@music_desc_option) %></p>
							</div>

							<% unless @band.get_field_value_for_option(@music_button_url_option).nil? %>
								<a href="<%= @band.get_field_value_for_option(@music_button_url_option) %>" class="album_button full" target="_blank">
									<%= @band.get_field_value_for_option(@music_button_text_option) %>
							  </a>
							<% end %>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<footer class="site_footer">
		<div class="wrap">
			<div class="credits">
				<p>&copy; <%= Time.now.year %> <%= @band.name %> - All Rights Reserved</p>
			</div>
		</div>
	</footer>
</div><!-- / #site_wrap -->